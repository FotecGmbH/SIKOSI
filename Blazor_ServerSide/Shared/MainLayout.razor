@inherits LayoutComponentBase
@inject AuthUserModel currentUser
@inject NavigationManager nav

<div class="main">
    <!--Navbar-->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="">Sikosi</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="">
                    Home
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="chat">Chat</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="files">Dateiverwaltung</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto nav-flex-icons">
            <li class="nav-item dropdown">
                <a class="btn btn-secondary nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="oi oi-person"></span>
                </a>
                <!--Seperation between Logged in and Logged Out-->
                <div class="dropdown-menu dropdown-menu-right"
                     aria-labelledby="dropdownMenuLink">
                    @if (currentUser.Id == 0)
                    {
                        <a class="dropdown-item" href="register">Registrieren</a>
                        <a class="dropdown-item" href="login">Login</a>
                    }
                    else
                    {
                        <a class="dropdown-item" href="mydata">Meine Daten</a>
                        <hr />
                        <!--TODO Logout-->
                        <a class="dropdown-item" @onclick="Logout">Logout</a>
                    }
                </div>
            </li>
        </ul>
    </nav>
    <div class="content px-4">
        @Body
    </div>
</div>

@code{
    public void Logout()
    {
        //TODO Proper Logout
        currentUser = new AuthUserModel();
        nav.NavigateTo("");
    }
}

